  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind": "tailwindcss -i ./themes/loaf/static/css/main.css -o ./themes/loaf/assets/css/main.css",
    "tailwind-watch": "tailwindcss -i ./themes/loaf/static/css/main.css -o ./themes/loaf/assets/css/main.css --watch",
    "webpack": "webpack",
    "webpack-watch": "webpack --watch",
    "hugo-build": "hugo --cleanDestinationDir",
    "hugo-build-prod": "hugo --minify --cleanDestinationDir",
    "hugo-server": "hugo server --disableFastRender",
    "build": "npm-run-all tailwind webpack hugo-build",
    "build-prod": "npm-run-all tailwind webpack hugo-build-prod",
    "dev": "npm-run-all tailwind webpack --parallel tailwind-watch webpack-watch hugo-server"
  },
